@model ddac.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Maersk Line</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-dark" style="padding-left:9%">
        @Html.ActionLink("CMS", "Index", null, new { @class = "navbar-brand" })
        <button class="navbar-toggler" aria-expanded="false" aria-controls="navbarColor02" aria-label="Toggle navigation" type="button" data-target="#navbarColor02" data-toggle="collapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02" style="margin-left:20px">

            @if (Model.UserType.Equals("admin"))
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("User Management", "User", "Admin", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Booking Management", "Index", "Bookings", null, new { @class = "nav-link" })
                    </li>
                </ul>
                <ul class="nav navbar-nav mr-md-5 navbar-right">
                    <li>
                        @Html.ActionLink("Logout", "Logout", "Admin", null, new { @class = "nav-link" })
                    </li>
                </ul>



            }



            else
            {
                <a class="dropdown-item">
                    @Html.ActionLink("Login", "Login", "Admin", null, new { @class = "nav-link" })
                </a>

                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Disabled</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 44px, 0px); top: 0px; left: 0px; will-change: transform;">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Separated link</a>
                        </div>
                    </li>
                </ul>
            }
        </div>

    </nav>


    <div class="container body-content">
        @RenderBody()

        <footer style="bottom:0">
            <hr />
            <p>&copy; @DateTime.Now.Year - Cargo Management System</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
