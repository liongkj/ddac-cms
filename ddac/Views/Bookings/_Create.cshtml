@model ddac.Models.Booking

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class='col-md-4'>
                @Html.LabelFor(model => model.Departure, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class='input-group date' id='datetimepicker1'>
                    @Html.EditorFor(m => m.Departure, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div class='col-md-4'>
                @Html.LabelFor(model => model.Arrival, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class='input-group date' id='datetimepicker2'>
                    @Html.EditorFor(m => m.Arrival, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ShipSize, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.ShipSize, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.EnumDropDownListFor(model => model.ShipSize, "Select Ship Size", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ShipSize, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Source, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Source, "Select shipping source", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Source, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Destination, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Destination, "Select shipping destination", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-10 col-md-offset-8 ">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" onclick="AddNewBooking()">Add</button>
        </div>
    </div>

}

@Scripts.Render("~/bundles/datetimepicker")

<script>

    $(function () {
        var today = new Date();
        var tomorrow = new Date(today.getTime() + 24 * 60 * 60 * 1000);
        $('#datetimepicker1').datetimepicker({
            format: 'DD/MM/YYYY HH:mm',
            minDate: today,
        });

        $('#datetimepicker2').datetimepicker({
            useCurrent: false,
            format: 'DD/MM/YYYY HH:mm',
            minDate: tomorrow
        });
        $("#datetimepicker1").on("dp.change", function (e) {
            $('#datetimepicker2').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker2").on("dp.change", function (e) {
            $('#datetimepicker1').data("DateTimePicker").maxDate(e.date);
        });
    });



   
    function AddNewBooking() {
        var Departure = $('#Departure').val();
        var Arrival = $('#Arrival').val();

        var ShipSize = $('#ShipSize').val();
        var Destination = $('#Destination').val();
        var Source = $('#Source').val();

        debugger;

        if (Departure != "" && Arrival != "" && ShipSize != "" && Destination != ""  && Source != "") {

                $.ajax({
                    type: "POST",
                    url: "/Bookings/Create",
                    data: {
                        Departure: Departure,
                        Arrival: Arrival,
                        ShipSize: ShipSize,
                        Destination: Destination,
                        Source:Source,
                    },
                    
                    success: function () {
                        alert("Successfully Added");
                        location.reload();
                    },
                    error: function () {
                        alert("Error");
                    }
                })
            } 
        
        else {
            alert("Please fill up all fields!");
        }
    }
</script>
