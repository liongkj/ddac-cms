@model IEnumerable<ddac.Models.Ship>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShipId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IMO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @("SP" + item.ShipId.ToString("D4"))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShipName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IMO)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ShipId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ShipId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ShipId })|
            @Html.ActionLink("New Schedule", "Index","Schedules", new { id = item.ShipId }, null)
        </td>
    </tr>
}

</table>
